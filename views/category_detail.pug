extends layout

block content
  .header
    h2.title= category.type 
    a.button.c-delete(href=`${category.url}/delete`) Delete Category
  ul.category-item-list
    each item in category_items
      li.item
        img(src='/images/sample.jpg', alt=item.item_name)
        h3.item-name= item.item_name
        p.item-description= item.description
        p.item-price Rs: #{item.price}
        a.button(href=item.url) View Item        
  a(href="/store/item/create") Add item    
